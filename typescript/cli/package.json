{
  "name": "@hyperlane-xyz/cli",
  "version": "3.1.3",
  "description": "A command-line utility for common Hyperlane operations",
  "dependencies": {
    "@hyperlane-xyz/sdk": "3.1.3",
    "@inquirer/prompts": "^3.0.0",
